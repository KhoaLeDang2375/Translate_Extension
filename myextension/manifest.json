{
  "manifest_version": 3,
  "name": "Text Translate Popup",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "commands"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "commands": {
    "translate_and_show": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Dịch văn bản và mở popup"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
